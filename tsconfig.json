{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,

    // Optional (and recommended for simplicity):
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  }
}
